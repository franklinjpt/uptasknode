mixin crearProyecto(proyecto = {})
    form.agregar-proyecto(action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST")
        .campo 
            label(for="nombre") Project Name:
            input(value=proyecto.nombre type="text" id="nombre" name="nombre" placeholder="Project Name")
        .campo.enviar 
            input(type="submit", value=`${proyecto.nombre ? 'Save' : 'Add'}` class="boton")