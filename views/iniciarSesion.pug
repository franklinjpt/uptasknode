doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario 
            h1 UpTask Login

            if locals.mensajes 
              .alertas 
                each categoria in Object.keys(locals.mensajes)
                  each error in mensajes[categoria] 
                    .alerta(class=`${categoria}`)
                      p= error

            form#fomulario.caja.caja-login(method="POST" action="/iniciar-sesion")
                .campo  
                    label(for="email")  E-mail:
                    input(type="email" name="email" placeholder="Your Email" required )
                .campo  
                    label(for="password")  Password:
                    input(type="password" name="password" placeholder="Your Password" required)
                .campo.enviar
                    input.boton(type="submit" value="Sign In")
                .campo.acciones
                    a(href="/crear-cuenta") Don't have an account yet? Create one for free
                    a(href="/restablecer") Forgot your password?
        include partials/scripts